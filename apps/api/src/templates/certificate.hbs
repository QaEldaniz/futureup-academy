<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800;900&family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap');

    @page {
      size: 297mm 210mm;
      margin: 0;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    html, body {
      width: 297mm;
      height: 210mm;
      max-height: 210mm;
      font-family: 'Inter', sans-serif;
      background: #ffffff;
      position: relative;
      overflow: hidden;
    }

    .certificate {
      width: 297mm;
      height: 210mm;
      max-height: 210mm;
      position: relative;
      overflow: hidden;
      background: linear-gradient(160deg, #fdfcff 0%, #f8f6ff 30%, #ffffff 60%, #f0f7ff 100%);
      page-break-after: avoid;
    }

    /* Outer border — double line effect */
    .border-outer {
      position: absolute;
      inset: 4mm;
      border: 0.6mm solid;
      border-image: linear-gradient(135deg, #6C3CE1, #1E40AF, #06B6D4, #1E40AF, #6C3CE1) 1;
      pointer-events: none;
    }

    .border-inner {
      position: absolute;
      inset: 7mm;
      border: 0.3mm solid;
      border-image: linear-gradient(135deg, rgba(108,60,225,0.3), rgba(30,64,175,0.3), rgba(6,182,212,0.3)) 1;
      pointer-events: none;
    }

    /* Corner ornaments — elegant geometric patterns */
    .ornament {
      position: absolute;
      width: 28mm;
      height: 28mm;
      pointer-events: none;
      z-index: 2;
    }
    .ornament-tl { top: 9mm; left: 9mm; }
    .ornament-tr { top: 9mm; right: 9mm; transform: scaleX(-1); }
    .ornament-bl { bottom: 9mm; left: 9mm; transform: scaleY(-1); }
    .ornament-br { bottom: 9mm; right: 9mm; transform: scale(-1, -1); }

    .ornament svg {
      width: 100%;
      height: 100%;
    }

    /* Subtle watermark pattern */
    .watermark-pattern {
      position: absolute;
      inset: 0;
      opacity: 0.018;
      background-image:
        radial-gradient(circle at 15% 25%, #6C3CE1 0.5mm, transparent 0.5mm),
        radial-gradient(circle at 85% 25%, #1E40AF 0.5mm, transparent 0.5mm),
        radial-gradient(circle at 15% 75%, #1E40AF 0.5mm, transparent 0.5mm),
        radial-gradient(circle at 85% 75%, #6C3CE1 0.5mm, transparent 0.5mm);
      pointer-events: none;
    }

    /* Subtle radial glow behind content */
    .glow-top {
      position: absolute;
      top: -20mm;
      left: 50%;
      transform: translateX(-50%);
      width: 200mm;
      height: 100mm;
      background: radial-gradient(ellipse, rgba(108,60,225,0.04) 0%, transparent 70%);
      pointer-events: none;
    }

    .glow-bottom {
      position: absolute;
      bottom: -10mm;
      left: 50%;
      transform: translateX(-50%);
      width: 180mm;
      height: 80mm;
      background: radial-gradient(ellipse, rgba(6,182,212,0.03) 0%, transparent 70%);
      pointer-events: none;
    }

    /* Content container */
    .content {
      position: relative;
      z-index: 3;
      padding: 14mm 30mm 12mm;
      height: 100%;
      max-height: 210mm;
      display: flex;
      flex-direction: column;
      align-items: center;
      overflow: hidden;
    }

    /* Header */
    .header {
      text-align: center;
      margin-bottom: 2mm;
    }

    /* Gold flourish ornamental line */
    .flourish {
      width: 60mm;
      height: 3mm;
      margin: 0 auto 4mm;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 2mm;
    }

    .flourish-line {
      flex: 1;
      height: 0.3mm;
      background: linear-gradient(90deg, transparent, #6C3CE1, rgba(108,60,225,0.3));
    }

    .flourish-line-r {
      flex: 1;
      height: 0.3mm;
      background: linear-gradient(90deg, rgba(108,60,225,0.3), #6C3CE1, transparent);
    }

    .flourish-diamond {
      width: 2.5mm;
      height: 2.5mm;
      background: linear-gradient(135deg, #6C3CE1, #1E40AF);
      transform: rotate(45deg);
      flex-shrink: 0;
    }

    .academy-name {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 14pt;
      font-weight: 700;
      color: #6C3CE1;
      letter-spacing: 6px;
      text-transform: uppercase;
    }

    .certificate-title {
      font-family: 'Playfair Display', serif;
      font-size: 48pt;
      font-weight: 800;
      background: linear-gradient(135deg, #6C3CE1 0%, #1E40AF 50%, #6C3CE1 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-top: 2mm;
      line-height: 1.1;
      letter-spacing: 2px;
      font-variant-ligatures: none;
      -webkit-font-variant-ligatures: none;
      font-feature-settings: "liga" 0, "clig" 0;
    }

    .of-completion {
      font-family: 'Playfair Display', serif;
      font-size: 19pt;
      font-weight: 500;
      font-style: italic;
      color: #6b7280;
      margin-top: 0mm;
      letter-spacing: 3px;
    }

    .subtitle {
      font-size: 12pt;
      color: #9ca3af;
      margin-top: 4mm;
      font-weight: 400;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    /* Decorative divider */
    .divider {
      width: 50mm;
      height: 0.3mm;
      background: linear-gradient(90deg, transparent, #d1d5db, transparent);
      margin: 2mm auto;
    }

    .divider-ornate {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 3mm;
      margin: 3mm auto;
    }

    .divider-ornate-line {
      width: 25mm;
      height: 0.3mm;
      background: linear-gradient(90deg, transparent, rgba(108,60,225,0.4));
    }

    .divider-ornate-line-r {
      width: 25mm;
      height: 0.3mm;
      background: linear-gradient(90deg, rgba(108,60,225,0.4), transparent);
    }

    .divider-ornate-dot {
      width: 1.5mm;
      height: 1.5mm;
      border-radius: 50%;
      background: linear-gradient(135deg, #6C3CE1, #1E40AF);
    }

    /* Student name — premium serif */
    .student-name {
      font-family: 'Playfair Display', serif;
      font-size: 34pt;
      font-weight: 700;
      color: #111827;
      margin: 2mm 0;
      text-align: center;
      line-height: 1.15;
      letter-spacing: 0.5px;
      font-variant-ligatures: none;
      font-feature-settings: "liga" 0, "clig" 0;
    }

    /* Name underline */
    .name-underline {
      width: 100mm;
      height: 0.8mm;
      background: linear-gradient(90deg, transparent, #6C3CE1, #1E40AF, #06B6D4, #1E40AF, #6C3CE1, transparent);
      border-radius: 0.5mm;
      margin: 1mm auto 2mm;
    }

    /* Course details */
    .course-label {
      font-size: 12pt;
      color: #9ca3af;
      margin-top: 2mm;
      letter-spacing: 1px;
    }

    .course-name {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 20pt;
      font-weight: 700;
      color: #1E40AF;
      margin-top: 1mm;
      text-align: center;
      letter-spacing: 0.3px;
    }

    /* Meta info row */
    .meta-row {
      display: flex;
      justify-content: center;
      gap: 15mm;
      margin-top: 5mm;
    }

    .meta-item {
      text-align: center;
      position: relative;
    }

    .meta-item + .meta-item::before {
      content: '';
      position: absolute;
      left: -7.5mm;
      top: 50%;
      transform: translateY(-50%);
      width: 0.3mm;
      height: 8mm;
      background: linear-gradient(to bottom, transparent, #d1d5db, transparent);
    }

    .meta-label {
      font-size: 9pt;
      color: #9ca3af;
      text-transform: uppercase;
      letter-spacing: 2px;
      font-weight: 600;
    }

    .meta-value {
      font-size: 13pt;
      color: #374151;
      font-weight: 600;
      margin-top: 1mm;
    }

    .grade-badge {
      display: inline-block;
      padding: 1mm 5mm;
      background: linear-gradient(135deg, #6C3CE1, #1E40AF);
      color: white;
      border-radius: 3mm;
      font-size: 12pt;
      font-weight: 700;
      margin-top: 1mm;
      letter-spacing: 0.5px;
      box-shadow: 0 1mm 3mm rgba(108,60,225,0.25);
    }

    /* Teacher review */
    .review-section {
      margin-top: 4mm;
      padding: 3mm 8mm;
      background: linear-gradient(135deg, rgba(108,60,225,0.04), rgba(30,64,175,0.03));
      border-left: 2mm solid;
      border-image: linear-gradient(to bottom, #6C3CE1, #1E40AF) 1;
      border-radius: 0 2mm 2mm 0;
      max-width: 200mm;
      width: 100%;
      position: relative;
    }

    .review-section::before {
      content: '\201C';
      font-family: 'Playfair Display', serif;
      font-size: 28pt;
      color: rgba(108,60,225,0.15);
      position: absolute;
      top: -1mm;
      left: 3mm;
      line-height: 1;
    }

    .review-text {
      font-size: 11pt;
      color: #4b5563;
      font-style: italic;
      line-height: 1.6;
      padding-left: 4mm;
    }

    /* Footer */
    .footer {
      margin-top: auto;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-top: 3mm;
    }

    .signature-block {
      text-align: center;
    }

    .signature-line {
      width: 50mm;
      height: 0.3mm;
      background: linear-gradient(90deg, transparent 5%, #c4b5fd 25%, #6C3CE1 50%, #c4b5fd 75%, transparent 95%);
      margin-bottom: 2mm;
    }

    .signature-name {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 13pt;
      font-weight: 600;
      color: #374151;
    }

    .signature-role {
      font-size: 10pt;
      color: #9ca3af;
      margin-top: 0.5mm;
      letter-spacing: 0.5px;
    }

    .qr-block {
      text-align: center;
    }

    .qr-code img {
      width: 20mm;
      height: 20mm;
      border: 0.4mm solid #e5e7eb;
      border-radius: 2mm;
      padding: 0.8mm;
      background: white;
    }

    .cert-code {
      font-family: 'Space Grotesk', monospace;
      font-size: 9pt;
      color: #9ca3af;
      margin-top: 1mm;
      letter-spacing: 1px;
    }

    .verify-text {
      font-size: 8pt;
      color: #c4b5fd;
      margin-top: 0.3mm;
      letter-spacing: 0.5px;
      text-transform: uppercase;
    }

    /* Bottom gradient bar */
    .bottom-bar {
      position: absolute;
      bottom: 5.5mm;
      left: 10mm;
      right: 10mm;
      height: 0.8mm;
      background: linear-gradient(90deg, transparent, #6C3CE1, #1E40AF, #06B6D4, #1E40AF, #6C3CE1, transparent);
      border-radius: 0.5mm;
    }

    /* Top gradient bar */
    .top-bar {
      position: absolute;
      top: 5.5mm;
      left: 10mm;
      right: 10mm;
      height: 0.8mm;
      background: linear-gradient(90deg, transparent, #6C3CE1, #1E40AF, #06B6D4, #1E40AF, #6C3CE1, transparent);
      border-radius: 0.5mm;
    }
  </style>
</head>
<body>
  <div class="certificate">
    <!-- Border frame -->
    <div class="border-outer"></div>
    <div class="border-inner"></div>
    <div class="top-bar"></div>
    <div class="bottom-bar"></div>

    <!-- Decorative corner ornaments -->
    <div class="ornament ornament-tl">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 0 L40 0 L40 3 L3 3 L3 40 L0 40 Z" fill="url(#grad1)" opacity="0.5"/>
        <path d="M0 0 L25 0 L25 1.5 L1.5 1.5 L1.5 25 L0 25 Z" fill="url(#grad1)" opacity="0.3"/>
        <circle cx="8" cy="8" r="2" fill="url(#grad1)" opacity="0.4"/>
        <path d="M15 0 L15 15 L0 15" stroke="url(#grad1)" stroke-width="0.5" fill="none" opacity="0.2"/>
        <path d="M30 0 L30 5 M35 0 L35 3" stroke="url(#grad1)" stroke-width="0.5" opacity="0.15"/>
        <path d="M0 30 L5 30 M0 35 L3 35" stroke="url(#grad1)" stroke-width="0.5" opacity="0.15"/>
        <defs>
          <linearGradient id="grad1" x1="0" y1="0" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#6C3CE1"/>
            <stop offset="100%" stop-color="#1E40AF"/>
          </linearGradient>
        </defs>
      </svg>
    </div>
    <div class="ornament ornament-tr">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 0 L40 0 L40 3 L3 3 L3 40 L0 40 Z" fill="url(#grad2)" opacity="0.5"/>
        <path d="M0 0 L25 0 L25 1.5 L1.5 1.5 L1.5 25 L0 25 Z" fill="url(#grad2)" opacity="0.3"/>
        <circle cx="8" cy="8" r="2" fill="url(#grad2)" opacity="0.4"/>
        <path d="M15 0 L15 15 L0 15" stroke="url(#grad2)" stroke-width="0.5" fill="none" opacity="0.2"/>
        <path d="M30 0 L30 5 M35 0 L35 3" stroke="url(#grad2)" stroke-width="0.5" opacity="0.15"/>
        <path d="M0 30 L5 30 M0 35 L3 35" stroke="url(#grad2)" stroke-width="0.5" opacity="0.15"/>
        <defs>
          <linearGradient id="grad2" x1="0" y1="0" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#1E40AF"/>
            <stop offset="100%" stop-color="#06B6D4"/>
          </linearGradient>
        </defs>
      </svg>
    </div>
    <div class="ornament ornament-bl">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 0 L40 0 L40 3 L3 3 L3 40 L0 40 Z" fill="url(#grad3)" opacity="0.5"/>
        <path d="M0 0 L25 0 L25 1.5 L1.5 1.5 L1.5 25 L0 25 Z" fill="url(#grad3)" opacity="0.3"/>
        <circle cx="8" cy="8" r="2" fill="url(#grad3)" opacity="0.4"/>
        <path d="M15 0 L15 15 L0 15" stroke="url(#grad3)" stroke-width="0.5" fill="none" opacity="0.2"/>
        <defs>
          <linearGradient id="grad3" x1="0" y1="0" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#1E40AF"/>
            <stop offset="100%" stop-color="#06B6D4"/>
          </linearGradient>
        </defs>
      </svg>
    </div>
    <div class="ornament ornament-br">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 0 L40 0 L40 3 L3 3 L3 40 L0 40 Z" fill="url(#grad4)" opacity="0.5"/>
        <path d="M0 0 L25 0 L25 1.5 L1.5 1.5 L1.5 25 L0 25 Z" fill="url(#grad4)" opacity="0.3"/>
        <circle cx="8" cy="8" r="2" fill="url(#grad4)" opacity="0.4"/>
        <path d="M15 0 L15 15 L0 15" stroke="url(#grad4)" stroke-width="0.5" fill="none" opacity="0.2"/>
        <defs>
          <linearGradient id="grad4" x1="0" y1="0" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#6C3CE1"/>
            <stop offset="100%" stop-color="#1E40AF"/>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- Subtle background effects -->
    <div class="watermark-pattern"></div>
    <div class="glow-top"></div>
    <div class="glow-bottom"></div>

    <div class="content">
      <!-- Header -->
      <div class="header">
        <div class="flourish">
          <div class="flourish-line"></div>
          <div class="flourish-diamond"></div>
          <div class="flourish-line-r"></div>
        </div>
        <div class="academy-name">FutureUp Academy</div>
        <div class="certificate-title">Certificate</div>
        <div class="of-completion">of Completion</div>
        <div class="subtitle">This is proudly presented to</div>
      </div>

      <!-- Student Name -->
      <div class="student-name">{{studentName}}</div>
      <div class="name-underline"></div>

      <!-- Course -->
      <div class="course-label">for successfully completing the course</div>
      <div class="course-name">{{courseName}}</div>

      <!-- Meta Row -->
      <div class="meta-row">
        <div class="meta-item">
          <div class="meta-label">Date Issued</div>
          <div class="meta-value">{{issueDate}}</div>
        </div>
        {{#if grade}}
        <div class="meta-item">
          <div class="meta-label">Grade</div>
          <div class="grade-badge">{{grade}}</div>
        </div>
        {{/if}}
        <div class="meta-item">
          <div class="meta-label">Instructor</div>
          <div class="meta-value">{{teacherName}}</div>
        </div>
      </div>

      <!-- Teacher Review -->
      {{#if teacherReview}}
      <div class="review-section">
        <div class="review-text">{{teacherReview}}</div>
      </div>
      {{/if}}

      <!-- Footer -->
      <div class="footer">
        <div class="signature-block">
          <div class="signature-line"></div>
          <div class="signature-name">{{teacherName}}</div>
          <div class="signature-role">Course Instructor</div>
        </div>

        <div class="signature-block">
          <div class="signature-line"></div>
          <div class="signature-name">FutureUp Academy</div>
          <div class="signature-role">Education Director</div>
        </div>

        <div class="qr-block">
          <div class="qr-code">
            <img src="{{qrCodeDataUrl}}" alt="QR Code" />
          </div>
          <div class="cert-code">{{uniqueCode}}</div>
          <div class="verify-text">Scan to verify</div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
